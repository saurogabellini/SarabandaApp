<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "www.chivuolessersarabada.com"
        version     = "2.2.0" >

<gap:config-file platform="ios" parent="CFBundleShortVersionString">
    <string>221</string>
</gap:config-file>

	<gap:platform name="ios" />
	<gap:platform name="android" />

    <access origin="*" />
    
    <!-- versionCode is optional and Android only -->

    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/camera" />
    <feature name="http://api.phonegap.com/1.0/notification" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/media" />
    <feature name="http://api.phonegap.com/1.0/contacts" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <feature name="http://api.phonegap.com/1.0/battery" />
    <feature name="http://api.phonegap.com/1.0/device" />

    <name>Sarabanda App</name>
    <icon src="icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/icon-certify-72.png" gap:platform="ios" width="72" height="72"/>
    <icon src="img/icon-certify-76.png" gap:platform="ios" width="76" height="76"/> 
    <icon src="img/icon-certify-120.png" gap:platform="ios" width="120" height="120"/> 
    <icon src="img/icon-certify-152.png" gap:platform="ios" width="152" height="152"/>
    <icon src="img/icon-certify-57.png" gap:platform="ios" width="57" height="57"/> 

		
    <gap:splash src="splash.png" gap:platform="ios"     width="320" height="480" />
    <gap:splash src="splashx2.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="splash-568h@2x.png"  gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="splashipad.png"  gap:platform="ios"     width="768" height="1024" />
    
    <author href="http://www.chivuolessersarabada.com" email="info@chivuolessersarabada.com">
        Sauro Gabellini
    </author>

    <gap:plugin name="cordova-plugin-whitelist" source="npm"/>
    <gap:plugin name="org.apache.cordova.vibration"  />
	<gap:plugin name="nl.x-services.plugins.insomnia" version="4.0.1" />
	<access origin="*" />
</widget>
